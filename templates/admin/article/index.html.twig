{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestion articles</h1>
    <p>
        <a href="{{ path('app_admin_article_edit') }}">
            Ajouter un article
        </a>
    </p>
    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>Cat√©gorie</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Date</th>
            <th>Nb de Commentaires</th>
            <th width="250px">Actions</th>
        </tr>
        {% for article in articles  %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.category.name }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.author }}</td>
                <td>{{ article.publicationDate|date('d/m/Y H:i:s') }}</td>
                <td><a href="{{ path('app_admin_comment_index', {id: article.id} ) }}">{{ article.comment.count }}</a></td>
                <td>
                    <a href="{{ path('app_admin_article_edit', {id: article.id} ) }}" class="btn btn-primary">
                        Modifier
                    </a>
                    <a href="{{ path('app_admin_article_delete', {id: article.id}) }}" class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}